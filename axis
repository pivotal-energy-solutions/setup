GITHUB_TOKEN=${1:-GITHUB_TOKEN}

if ! [ "x$GITHUB_TOKEN" == "x" ]; then
  echo 'Generate a GitHub personal access token on the following page with full private access to `pivotal-energy-solutions/axis`':
  echo
  echo '    https://github.com/settings/tokens'
  echo
  printf "Personal access token: "
  stty -echo
  read GITHUB_TOKEN
  stty echo
  printf "\n"
fi

echo $GITHUB_TOKEN

bash <(curl -fsSL https://${GITHUB_TOKEN}@raw.githubusercontent.com/pivotal-energy-solutions/axis/master/bin/setup)
